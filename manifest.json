{
  "manifest_version": 3,
  "name": "FavoriteBoard Plugin",
  "version": "1.0.0",
  "description": "将收藏夹可视化为现代化链接卡片界面 - 基于 LinkBoard 设计",
  "author": "JupiterTheWarlock",
  
  "permissions": [
    "bookmarks",
    "favicon",
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "打开收藏夹面板"
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png", 
    "128": "assets/icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/floatWindow/folder-selector-float.js",
        "js/ui/folder-selector.js",
        "js/utils/card-interaction-utils.js"
      ],
      "css": [
        "css/folder-selector-popup.css"
      ]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "assets/icons/*",
        "assets/images/*",
        "css/*",
        "js/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 